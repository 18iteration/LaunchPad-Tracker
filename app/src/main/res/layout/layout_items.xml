<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/launch_card"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="26dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/youtube_link"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/eta"
                android:layout_alignStart="@id/image_view"
                android:layout_marginStart="130dp"
                android:layout_marginTop="0dp"
                android:autoLink="all"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:background="@android:color/transparent"
                android:fontFamily="@font/sarala"
                android:gravity="start"
                android:text="Canada"
                android:textAlignment="textStart"
                android:textColor="@color/colorLight"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignStart="@id/image_view"
                android:layout_alignParentTop="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sarala"
                android:gravity="center"
                android:text="Canada"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorLight"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/name"
                android:layout_alignStart="@id/image_view"
                android:layout_marginStart="130dp"
                android:layout_marginTop="0dp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/sarala"
                android:gravity="center"
                android:text="Canada"
                android:textAlignment="textStart"
                android:textColor="@color/colorLight"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/landing_text"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@+id/youtube_link"
                android:layout_alignStart="@id/image_view"
                android:layout_marginStart="130dp"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/sarala"
                android:gravity="center"
                android:text="@string/landing"
                android:textAlignment="textStart"
                android:textColor="@color/colorLight"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/landing_intent"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@id/landing_text"
                android:layout_alignTop="@id/landing_text"
                android:layout_marginStart="78dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/sarala"
                android:gravity="center"
                android:text="Canada"
                android:textAlignment="textStart"
                android:textColor="@color/colorLight"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eta"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/date"
                android:layout_alignStart="@id/image_view"
                android:layout_marginStart="130dp"
                android:layout_marginTop="0dp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/sarala"
                android:gravity="center"
                android:text="Canada"
                android:textAlignment="textStart"
                android:textColor="@color/colorLight"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
